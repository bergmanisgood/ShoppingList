<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
	    android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/llNewList"
		android:orientation="horizontal"> 
	    <EditText
	        android:id="@+id/edtNewListName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:ems="6" 
	        android:hint="Введите название списка">

	        <requestFocus />
	    </EditText>

	    <Button
	        android:id="@+id/btnCreateNewList"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="+" />
	</LinearLayout>
	
	<LinearLayout
	    android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/llExistLists"
		android:orientation="horizontal"> 

	    <Button
	        android:id="@+id/btnExistList"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Посмотреть существующие списки покупок" />
	</LinearLayout>

</LinearLayout>